{
  "name": "@leafcuttr/libgraphit-svelte",
  "version": "0.1.6",
  "type": "module",
  "description": "Svelte adapter for Grafana Chart.js Renderer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "svelte": "./dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "svelte-package && tsc",
    "dev": "svelte-package --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.svelte",
    "clean": "rm -rf dist"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@leafcuttr/libgraphit-core": "0.0.5"
  },
  "peerDependencies": {
    "chart.js": "^4.5.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "chartjs-plugin-datasource-prometheus": "^2.4.1",
    "date-fns": "^3.6.0",
    "svelte": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.5.1",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.20",
    "svelte-preprocess": "^6.0.3",
    "vite": "^5.4.20",
    "vitest": "^1.6.1"
  },
  "keywords": [
    "svelte",
    "grafana",
    "chart.js",
    "prometheus",
    "component"
  ],
  "exports": {
    ".": {
      "svelte": "./dist/index.js",
      "import": "./dist/index.esm.js"
    }
  },
  "license": "MIT"
}
